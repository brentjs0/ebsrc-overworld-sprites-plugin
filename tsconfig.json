{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
      "esModuleInterop": true,
      "lib": ["es2020"],
      "module": "commonjs",
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "outDir": "dest",
      "rootDir": "src",
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "exclude": ["node_modules", "notes"],
}