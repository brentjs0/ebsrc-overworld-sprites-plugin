{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
      "esModuleInterop": true,
      "lib": ["es2020"],
      "module": "commonjs",
  
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
  
      "rootDir": "src",
      "outDir": "dest",
      "sourceMap": true,
      "strict": true,
      "target": "es2020"
    },
    "exclude": ["node_modules", "notes"]
  }
  